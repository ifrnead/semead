<div class="row">
  <div class="col-md-6">
    <h1><%= fa_icon 'file-text-o' %> Trabalhos</h1>
  </div>
</div>

<% if @trabalhos.empty? %>
  <p>Nenhum trabalho enviado até o momento.</p>
<% else %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Linha de pesquisa</th>
        <th>Tipo de trabalho</th>
        <th colspan="3">Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @trabalhos.each do |trabalho| %>
        <tr>
          <td><%= trabalho.titulo %></td>
          <td><%= trabalho.participante.nome %></td>
          <td><%= trabalho.linha.nome %></td>
          <td><%= trabalho.tipo_trabalho.nome %></td>
          <td>
            <div class="btn-group">
              <% if can? :show, trabalho %>
                <%= link_to fa_icon('download'), trabalho.arquivo.url, class: 'btn btn-primary btn-sm' %>
                <%= link_to fa_icon('eye'), admin_trabalho_path(trabalho), class: 'btn btn-primary btn-sm' %>
              <% end %>
              <% if can? :update, trabalho %>
                <%= link_to fa_icon('edit'), edit_admin_trabalho_path(trabalho), class: 'btn btn-primary btn-sm' %>
              <% end %>
              <% if can? :delete, trabalho %>
                <%= link_to fa_icon('trash'), admin_trabalho_path(trabalho), class: "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Tem certeza que deseja excluir esse trabalho?' } %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
