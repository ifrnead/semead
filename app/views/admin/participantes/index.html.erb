
<div class="row">
  <div class="col-md-6">
    <h1><%= fa_icon 'users' %> Participantes</h1>
  </div>
  <div class="col-md-6">
    <div class="btn-group pull-right">
      <a href="#" class="btn btn-primary"><%= fa_icon 'plus' %> Novo Participante</a>
    </div>
  </div>
</div>

<% if @participantes.empty? %>
  <p>Nenhum participante encontrado.</p>
<% else %>
  <table class="table table-bordered table-hover">
    <thead>
      <th>Nome</th>
      <th>CPF/Passaporte</th>
      <th>País/Cidade</th>
      <th>Opções</th>
    </thead>
    <tbody>
      <% @participantes.each do |participante| %>
        <tr>
          <td><%= participante.nome %></td>
          <td><%= participante.documento %></td>
          <td>
            <% if participante.pais.brasil? %>
              <%= participante.cidade.nome_sigla %>
            <% else %>
              <%= participante.pais.nome %>
            <% end %>
          </td>
          <td>
            <div class="btn-group">
              <a href="#" class="btn btn-primary btn-sm"><%= fa_icon 'eye' %></a>
              <a href="#" class="btn btn-primary btn-sm"><%= fa_icon 'edit' %></a>
              <a href="#" class="btn btn-primary btn-sm"><%= fa_icon 'trash' %></a>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
