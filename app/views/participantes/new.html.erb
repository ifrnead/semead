<%= content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      if(!$("#participante_possui_necessidades_especiais").is(':checked')) {
        $("#participante_necessidades_especiais").parent().hide();
      }

      $("#participante_cidade_id").select2({
        theme: "bootstrap",
        language: "pt-BR",
        ajax: {
          url: "<%= cidades_path %>",
          dataType: 'json',
          delay: 250,
          data: function(params) {
            return {
              q: params.term,
              page: params.page
            }
          },
          processResults: function (data) {
            return {
              results: $.map(data, function (item) {
                          return {
                            text: item.nome,
                            id: item.id
                          }
                        })
            };
          },
          cache: true
        },
        escapeMarkup: function (markup) { return markup; }, // let our custom formatter work
        minimumInputLength: 3
      });
    });

    function toggle_necessidades_especiais() {
      $("#participante_necessidades_especiais").parent().toggle('blind');
    }

    function verificar_pais() {
      pais_id = $("#participante_pais_id").val();
      if(pais_id != 33) {
        $("#participante_cidade_id").attr('disabled', 'disabled');
      } else {
        $("#participante_cidade_id").attr('disabled', false);
      }
    }
  </script>
<% end %>

<div class="row">
  <div class="col-md-6 col-sm-12">
    <h1>Inscrição</h1>
    <%= bootstrap_form_for(@participante) do |participante| %>
      <p>Os campos marcados com * são obrigatórios.</p>
      <%= participante.text_field :nome, label: 'Nome completo *' %>
      <%= participante.fields_for :usuario do |usuario| %>
        <%= usuario.email_field :email, label: 'E-mail *' %>
        <%= usuario.password_field :password, label: 'Senha *' %>
        <%= usuario.password_field :password_confirmation, label: 'Confirmação de senha *' %>
      <% end %>
      <%= participante.select :pais_id, Pais.select, {selected: 33, label: 'País *'}, {onchange: 'verificar_pais()'} %>
      <%= participante.select :cidade_id, {}, label: 'Cidade' %>
      <%= participante.text_field :documento, label: 'CPF/Passaporte *', placeholder: 'Apenas números' %>
      <%= participante.select :tipo_participante_id, TipoParticipante.select, prompt: 'Selecione', label: 'Perfil *' %>
      <%= participante.text_field :instituicao, label: 'Instituição *' %>
      <%= participante.check_box :possui_necessidades_especiais, label: 'Você possui alguma necessidade específica?', onchange: 'toggle_necessidades_especiais()' %>
      <%= participante.text_area :necessidades_especiais, label: 'Descreva a(s) sua(s) necessidade(s) específica(s)' %>
      <%= participante.submit 'Enviar' %>
    <% end %>
  </div>
  <div class="col-md-6 col-sm-12">
    <h2>Valores</h2>
    <table class="table table-bordered">
      <thead>
        <th>Perfil</th>
        <th>Até agosto</th>
        <th>Até outubro</th>
        <th>Em novembro</th>
      </thead>
      <tbody>
        <tr>
          <td>Estudantes</td>
          <td>R$ 80</td>
          <td>R$ 100</td>
          <td>R$ 120</td>
        </tr>
        <tr>
          <td>Professores da educação básica, ensino superior, pós-graduação e outros profissionais de educação</td>
          <td>R$ 100</td>
          <td>R$ 120</td>
          <td>R$ 140</td>
        </tr>
        <tr>
          <td>Público em geral</td>
          <td>R$ 120</td>
          <td>R$ 140</td>
          <td>R$ 160</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
