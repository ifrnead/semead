<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= fa_icon 'key' %> Recuperar Senha</h3>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_tag(url: recuperacao_senha_path, method: :post) do |f| %>
          <%= f.text_field :email, label: 'Digite seu e-mail' %>
          <%= f.submit 'Enviar', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
